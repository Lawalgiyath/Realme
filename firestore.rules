rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write to their own document.
    match /users/{userId} {
      allow read, update, create: if request.auth.uid == userId;
    }

    // Any authenticated user can create an organization (as they become the leader).
    // Any authenticated user can read an organization's details (e.g., for invite code validation).
    match /organizations/{orgId} {
      allow read, create: if request.auth.uid != null;
      // Only the leader can update their organization's document.
      allow update: if request.auth.uid == get(/databases/$(database)/documents/organizations/$(orgId)).data.leaderUid;
    }
  }
}
