rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // A user can create their own user document.
    // They can only read or update their own data.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid == request.resource.data.uid;
    }

    // An authenticated user can create an organization, but only if they are the leader.
    // Any authenticated user can read organization data (e.g., to verify an org code).
    match /organizations/{organizationId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.leaderUid;
      // Add update rules for leaders later if needed
      // allow update: if request.auth.uid == resource.data.leaderUid;
    }
  }
}
